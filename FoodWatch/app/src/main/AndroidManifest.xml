<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sharifian.shaheen.foodwatch" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <!-- To unrequire camera as part of app, android:required="false", but you also have to check Camera Hardware in activity -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TaggingActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CalcActivity"
            android:label="@string/title_activity_calc" >
        </activity>
        <activity
            android:name=".CaptureActivity"
            android:label="@string/title_activity_capture"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".CameraActivity"
            android:label="@string/app_name"

            android:screenOrientation="landscape">
            <!-- configure this activity to use landscape orientation -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>


</manifest>
