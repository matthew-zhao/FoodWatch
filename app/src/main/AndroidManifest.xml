<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foodwatch.android.starter.api.v2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.foodwatch.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.foodwatch.activity.RecognizeConceptsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.foodwatch.activity.CaptureActivity"
            android:label="@string/title_activity_capture"
            android:parentActivityName=".BaseActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="BaseActivity" />
        </activity>
        <activity
            android:name="com.foodwatch.activity.TaggingActivity"
            android:label="@string/title_activity_tagging"
            android:parentActivityName=".BaseActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="BaseActivity" />
        </activity>
        <activity
            android:name="com.foodwatch.activity.ResultActivity"
            android:label="@string/title_activity_result"
            android:parentActivityName=".BaseActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="BaseActivity" />
        </activity>
    </application>

</manifest>